<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox spacing="20.0" styleClass="background-pane" stylesheets="@style.css"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.dam.fcojavier.substracker.controller.ConfigController">

    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
    </padding>

    <VBox>
        <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;" text="Configuración" />
        <Label style="-fx-font-size: 14; -fx-text-fill: -fx-text-muted;" text="Gestiona tu perfil y cuenta" />
    </VBox>

    <HBox spacing="30.0" VBox.vgrow="ALWAYS">

        <VBox spacing="15.0" styleClass="card-pane" minWidth="400.0">
            <Label styleClass="subtitle-label" text="MIS DATOS" />

            <VBox spacing="5.0">
                <Label style="-fx-text-fill: -fx-text-muted; -fx-font-size: 12px; -fx-font-weight: bold;" text="NOMBRE" />
                <TextField fx:id="txtNombre" />
            </VBox>

            <VBox spacing="5.0">
                <Label style="-fx-text-fill: -fx-text-muted; -fx-font-size: 12px; -fx-font-weight: bold;" text="APELLIDOS" />
                <TextField fx:id="txtApellidos" />
            </VBox>

            <VBox spacing="5.0">
                <Label style="-fx-text-fill: -fx-text-muted; -fx-font-size: 12px; -fx-font-weight: bold;" text="EMAIL" />
                <TextField fx:id="txtEmail" />
            </VBox>

            <Separator opacity="0.1" />

            <HBox alignment="CENTER_RIGHT">
                <Button onAction="#guardarDatos" styleClass="button-primary" text="Guardar Cambios" />
            </HBox>
        </VBox>

        <VBox spacing="20.0" HBox.hgrow="ALWAYS">

            <VBox spacing="15.0" styleClass="card-pane">
                <Label styleClass="subtitle-label" text="CAMBIAR CONTRASEÑA" />

                <HBox spacing="10.0">
                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: -fx-text-muted; -fx-font-size: 12px;" text="CONTRASEÑA NUEVA" />
                        <PasswordField fx:id="txtNuevaPass" promptText="Mínimo 6 caracteres" />
                    </VBox>
                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                        <Label style="-fx-text-fill: -fx-text-muted; -fx-font-size: 12px;" text="CONFIRMAR NUEVA" />
                        <PasswordField fx:id="txtConfirmPass" promptText="Repite la contraseña" />
                    </VBox>
                </HBox>

                <Button onAction="#cambiarPassword" styleClass="button-secondary" text="Actualizar Contraseña" />
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <VBox spacing="10.0" style="-fx-border-color: #e74c3c; -fx-border-width: 1; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20; -fx-background-color: rgba(231, 76, 60, 0.05);">
                <Label style="-fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-font-size: 14;" text="ZONA DE PELIGRO" />
                <Label style="-fx-text-fill: -fx-text-muted; -fx-font-size: 12;" text="Una vez elimines tu cuenta, no hay vuelta atrás. Se borrarán todas tus suscripciones." wrapText="true" />

                <Button onAction="#eliminarCuenta" styleClass="button-danger" text="Eliminar mi cuenta definitivamente" />
            </VBox>

        </VBox>
    </HBox>
</VBox>
