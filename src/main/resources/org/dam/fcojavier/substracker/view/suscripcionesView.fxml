<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox spacing="20.0" styleClass="background-pane" stylesheets="@style.css"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.dam.fcojavier.substracker.controller.SuscripcionesController">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Label styleClass="title-label" text="Mis Suscripciones" />
        <HBox HBox.hgrow="ALWAYS" /> <Button onAction="#handleNuevaSuscripcion" styleClass="button-primary" text="+ Nueva Suscripción" />
    </HBox>

    <TableView fx:id="tablaSuscripciones" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colNombre" prefWidth="200.0" text="Servicio" />
            <TableColumn fx:id="colPrecio" prefWidth="100.0" text="Precio" />
            <TableColumn fx:id="colCiclo" prefWidth="120.0" text="Ciclo" />
            <TableColumn fx:id="colCategoria" prefWidth="120.0" text="Categoría" />
            <TableColumn fx:id="colActivo" prefWidth="100.0" text="Estado" />
            <TableColumn fx:id="colProximoPago" prefWidth="150.0" text="Próximo Pago" />
        </columns>
        <placeholder>
            <Label text="No tienes ninguna suscripción activa" />
        </placeholder>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button onAction="#handleEditar" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-cursor: hand;" text="Editar" />
        <Button onAction="#handleEliminar" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand;" text="Eliminar" />
    </HBox>

</VBox>
