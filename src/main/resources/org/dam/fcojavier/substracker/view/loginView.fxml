<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<StackPane styleClass="background-pane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dam.fcojavier.substracker.controller.LoginController">

    <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="15.0" styleClass="card-pane">

        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>

        <ImageView fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@/logo.png" />
            </image>
        </ImageView>

        <Label style="-fx-text-fill: -fx-text-light; -fx-font-size: 14; -fx-padding: 5 0 15 0;"
               text="Todas tus suscripciones, un solo lugar" />

        <Separator prefWidth="200.0" />

        <HBox alignment="CENTER" spacing="10.0">
            <Label style="-fx-text-fill: -fx-text-muted; -fx-font-size: 14px;" text="Almacenamiento:" />

            <ComboBox fx:id="comboDB" prefWidth="130.0"
                      style="-fx-font-size: 12px; -fx-background-color: transparent; -fx-border-color: #536e8a; -fx-border-radius: 5; -fx-padding: 0 0 0 5;" />
        </HBox>

        <Separator prefWidth="200.0" />

        <TextField fx:id="txtEmail" promptText="Correo electrónico" text="fran@gmail.com" />

        <PasswordField fx:id="txtPassword" promptText="Contraseña" text="123456" />

        <Button fx:id="btnLogin" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogin" styleClass="button-primary" text="ENTRAR" />

        <Label fx:id="lblError" styleClass="error-label" text="Error de credenciales" visible="false" wrapText="true" />

        <Separator prefWidth="200.0" />

        <HBox alignment="CENTER" spacing="5.0">
            <Label style="-fx-text-fill: -fx-text-muted; -fx-font-size: 14;" text="¿No tienes cuenta?" />
            <Hyperlink fx:id="linkRegistro" onAction="#irARegistro" style="-fx-text-fill: -fx-accent-color; -fx-font-size: 14;" text="Regístrate aquí" />
        </HBox>

    </VBox>
</StackPane>
