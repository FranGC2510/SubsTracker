<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane styleClass="background-pane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dam.fcojavier.substracker.controller.LoginController">

    <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="15.0" styleClass="card-pane">

        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>

        <Label styleClass="title-label" text="SubTracker" />
        <Label styleClass="subtitle-label" text="Gestiona tus suscripciones" />

        <Separator prefWidth="200.0" />

        <TextField fx:id="txtEmail" promptText="Correo electrónico" text="fran@gmail.com" />

        <PasswordField fx:id="txtPassword" promptText="Contraseña" text="123456" />

        <Button fx:id="btnLogin" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogin" styleClass="button-primary" text="ENTRAR" />

        <Label fx:id="lblError" styleClass="error-label" text="Error de credenciales" visible="false" wrapText="true" />

        <Separator prefWidth="200.0" />

        <HBox alignment="CENTER" spacing="5.0">
            <Label style="-fx-text-fill: -fx-text-muted;" text="¿No tienes cuenta?" />
            <Hyperlink fx:id="linkRegistro" onAction="#irARegistro" style="-fx-text-fill: -fx-accent-color;" text="Regístrate aquí" />
        </HBox>

    </VBox>
</StackPane>
